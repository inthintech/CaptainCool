<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.keyrelations.captaincool.MatchStartActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tossStatus"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/textColor"
        android:background="@color/textBgColor"
        android:paddingTop="@dimen/text_bg_vertical_margin"
        android:paddingBottom="@dimen/text_bg_vertical_margin"
        android:paddingLeft="@dimen/text_bg_horizontal_margin"
        android:paddingRight="@dimen/text_bg_horizontal_margin"
        />

    <Button
        android:layout_below="@+id/tossStatus"
        android:layout_marginTop="40dp"
        android:layout_width="@dimen/new_game_btn_width"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="@string/continue_progress"
        android:id="@+id/buttonContinue"
        android:textSize="@dimen/new_game_btn_text_size"
        android:onClick="navigateToMatchStartActivity"
        />


</RelativeLayout>
