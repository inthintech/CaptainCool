<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/texture"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.keyrelations.captaincool.SelectOutcomeActivity">

    <TextView
        android:id="@+id/textViewlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corner"
        android:text="Select Outcomes"
        android:textColor="@color/label_text_color"
        android:textSize="@dimen/label_text_size" />

    <TextView
        android:id="@+id/textViewOutcome1"
        android:gravity="center"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewlabel"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner_outcome"
        android:text="1"
        android:textColor="@color/label_text_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewOutcome1countIndicator"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewOutcome1"
        android:layout_marginTop="5dp"
        android:text="x4"
        android:background="@drawable/rounded_corner_indicator"
        android:textColor="#8B1A1A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewOutcome2"
        android:textAlignment="center"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewOutcome1"
        android:layout_below="@+id/textViewlabel"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/textViewOutcome1"
        android:layout_toEndOf="@+id/textViewOutcome1"
        android:background="@drawable/rounded_corner_outcome"
        android:text="2"
        android:textColor="@color/label_text_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewOutcome2countIndicator"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewOutcome1countIndicator"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/textViewOutcome1countIndicator"
        android:layout_toEndOf="@+id/textViewOutcome1countIndicator"
        android:layout_marginLeft="40dp"
        android:text="x4"
        android:background="@drawable/rounded_corner_indicator"
        android:textColor="#8B1A1A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewOutcome3"
        android:textAlignment="center"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewOutcome1"
        android:layout_below="@+id/textViewlabel"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/textViewOutcome2"
        android:layout_toEndOf="@+id/textViewOutcome2"
        android:background="@drawable/rounded_corner_outcome"
        android:text="3"
        android:textColor="@color/label_text_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewOutcome3countIndicator"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewOutcome3"
        android:layout_marginTop="5dp"
        android:text="x4"
        android:background="@drawable/rounded_corner_indicator"
        android:textColor="#8B1A1A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewOutcome4"
        android:textAlignment="center"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewOutcome1"
        android:layout_below="@+id/textViewlabel"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/textViewOutcome3"
        android:layout_toEndOf="@+id/textViewOutcome3"
        android:background="@drawable/rounded_corner_outcome"
        android:text="4"
        android:textColor="@color/label_text_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewOutcome4countIndicator"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewOutcome4"
        android:layout_marginTop="5dp"
        android:text="x4"
        android:background="@drawable/rounded_corner_indicator"
        android:textColor="#8B1A1A"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/textViewOutcome5"
        android:gravity="center"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewOutcome1"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_corner_outcome"
        android:text="1"
        android:textColor="@color/label_text_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewOutcome5countIndicator"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewOutcome5"
        android:layout_marginTop="5dp"
        android:text="x4"
        android:background="@drawable/rounded_corner_indicator"
        android:textColor="#8B1A1A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewOutcome6"
        android:textAlignment="center"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewOutcome5"
        android:layout_below="@+id/textViewlabel"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/textViewOutcome5"
        android:layout_toEndOf="@+id/textViewOutcome5"
        android:background="@drawable/rounded_corner_outcome"
        android:text="2"
        android:textColor="@color/label_text_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewOutcome6countIndicator"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewOutcome6"
        android:layout_marginTop="5dp"
        android:text="x4"
        android:background="@drawable/rounded_corner_indicator"
        android:textColor="#8B1A1A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewOutcome7"
        android:textAlignment="center"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewOutcome5"
        android:layout_below="@+id/textViewlabel"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/textViewOutcome6"
        android:layout_toEndOf="@+id/textViewOutcome6"
        android:background="@drawable/rounded_corner_outcome"
        android:text="3"
        android:textColor="@color/label_text_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewOutcome7countIndicator"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewOutcome7"
        android:layout_marginTop="5dp"
        android:text="x4"
        android:background="@drawable/rounded_corner_indicator"
        android:textColor="#8B1A1A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewOutcome8"
        android:textAlignment="center"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewOutcome5"
        android:layout_below="@+id/textViewlabel"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/textViewOutcome7"
        android:layout_toEndOf="@+id/textViewOutcome7"
        android:background="@drawable/rounded_corner_outcome"
        android:text="4"
        android:textColor="@color/label_text_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewOutcome8countIndicator"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewOutcome8"
        android:layout_marginTop="5dp"
        android:text="x4"
        android:background="@drawable/rounded_corner_indicator"
        android:textColor="#8B1A1A"
        android:textSize="16sp" />


    <Button
        android:id="@+id/buttonContinue"
        android:layout_width="@dimen/new_game_btn_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewOutcome5countIndicator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:onClick="navigateToSelectOutcomeActivity"
        android:text="@string/continue_progress"
        android:textSize="@dimen/new_game_btn_text_size" />

</RelativeLayout>
